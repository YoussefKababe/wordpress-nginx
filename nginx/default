server {
  listen 80;
  server_name  localhost;
  client_max_body_size 20M;
  root /usr/share/nginx/html/wordpress;

  location / {
    index index.php;
  }

  location ~ \.php$ {
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_index index.php;
    include fastcgi.conf;
  }
}
